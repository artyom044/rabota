#include <iostream>
#include <climits>

using namespace std;

int main() {
    const int size = 10;
    int R[size];

    cout << "Введите " << size << " элементов массива R:\n";
    for (int i = 0; i < size; i++) {
        cin >> R[i];
    }

    int minPositive = INT_MAX;
    int maxNegative = INT_MIN;

    for (int i = 0; i < size; i++) {
        if (R[i] > 0 && R[i] < minPositive) {
            minPositive = R[i];
        }
        if (R[i] < 0 && R[i] > maxNegative) {
            maxNegative = R[i];
        }
    }

    if (minPositive == INT_MAX)
        cout << "Положительных элементов нет.\n";
    else
        cout << "Минимальный положительный элемент: " << minPositive << endl;

    if (maxNegative == INT_MIN)
        cout << "Отрицательных элементов нет.\n";
    else
        cout << "Максимальный отрицательный элемент: " << maxNegative << endl;

    int B[5][5];

    cout << "Введите элементы матрицы B 5x5:\n";
    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < 5; j++) {
            cin >> B[i][j];
        }
    }

    int sumBelowDiagonal = 0;
    int sumOnDiagonal = 0; 

    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < 5; j++) {
            if (i == j) {
                sumOnDiagonal += B[i][j];
            } else if (i > j) {
                sumBelowDiagonal += B[i][j];
            }
        }
    }

    cout << "Сумма элементов под главной диагональю: " << sumBelowDiagonal << endl;
    cout << "Сумма элементов на главной диагонали: " << sumOnDiagonal << endl;

    return 0;
}
