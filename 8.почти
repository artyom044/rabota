#include <iostream>
#include <string>

using namespace std;

struct Employee {
    string name;
    int age;
    string position;
};

int main() {
    const int size = 3;
    Employee employees[size];

    for (int i = 0; i < size; i++) {
        cout << "Введите имя сотрудника #" << i + 1 << ": ";
        cin >> employees[i].name;
        cout << "Введите возраст: ";
        cin >> employees[i].age;
        cout << "Введите должность: ";
        cin >> employees[i].position;
        cout << endl;
    }

    string searchName;
    cout << "Введите имя сотрудника для поиска: ";
    cin >> searchName;

    bool foundAny = false; // флаг, есть ли совпадения

    for (int i = 0; i < size; i++) {
        if (employees[i].name == searchName) {
            cout << "Найден сотрудник:\n";
            cout << "Имя: " << employees[i].name << endl;
            cout << "Возраст: " << employees[i].age << endl;
            cout << "Должность: " << employees[i].position << endl;
            cout << "--------------------------\n";
            foundAny = true;
        }
    }

    if (!foundAny) {
        cout << "Сотрудник с именем " << searchName << " не найден.\n";
    }

    return 0;
}
